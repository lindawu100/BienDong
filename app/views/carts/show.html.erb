<h1>
    購物車
    <%= link_to "清空購物車", cart_path, method: 'delete', class: 'btn btn-sm btn-success' unless current_cart.empty? %>
</h1>
<% if not current_cart.empty? %>
    <table class="table">
        <thead>
            <tr>
                <th>餐點</th>
                <th>數量</th>
                <th>小記</th>
            </tr>
        </thead>
        <tbody>
            <% current_cart.items.each do |cart_item| %>
            <tr>
                <th><%= cart_item.item.name %> (<%= cart_item.item.price %>) 元</th>
                <th><%= cart_item.quantity %> </th>
                <th><%= cart_item.total %> </th>
            </tr>
            <% end %>
        </tbody>
        <tfoot>
            <tr>
                <td colspan="2">總計</td>
                <td><%= current_cart.total %></td>
            </tr>
        </tfoot>
    </table>
<% end %>

<%= link_to "繼續購物", root_path, class: 'btn btn-primary' %>

<%= link_to "確認訂單", root_path, class: 'btn btn-danger' if not current_cart.empty? %>